<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <!-- Login/Logout Display Conditional Logic -->
        <% if (!username) { %>
          <form class="form-inline" action="/login" method="POST">
            <div class="form-group mb-2">
              <input class="form-control" type="text" name="username" placeholder="Username" style="width: 200px; margin: 1em">
              <button type="submit" class="btn btn-light">Log in</button>
            </div>
          </form>
          
          <% } else { %>
            <p>Logged in as <%= username.email %></p>
            <form method="POST" action="/logout" name="username">
            <button type="submit" class="btn btn-light">Log out</button></form>
            <!-- <button type="submit" class="btn btn-light" action="/logout" method="POST">Logout</button> -->
          <% } %>

      </div>
    </div>
  </nav>
</header>